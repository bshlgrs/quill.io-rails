<h2>dashboard</h2>

<% if @posts.empty? %>
  <p>no posts yet!</p>
<% else %>
  <% @posts.each do |post| %>
    <div class="panel panel-default">
      <div class="panel-body">
        <h2><%= link_to post.title, blog_post_url(post.user, post) %></h2>
        <strong>by <%= post.user.username %></strong>
        <hr>
        <%= markdown.render(post.body).html_safe %>
      </div>
    </div>
  <% end %>
<% end %>