<h2>dashboard</h2>

<div class="panel panel-default">
  <div class="panel-body">
      <h4>
        <a data-toggle="collapse" data-target="#newTextPost">new text post
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        </a>
      </h4>

    <div class="collapse" id="newTextPost">
      <form action="posts" method="post">
        <div class="form-group">
          <label for="title">Title</label>
          <input class="form-control" id="title" placeholder="Title (optional)" name="post[title]">
        </div>
        
        <textarea class="form-control" rows="3" name="post[body]"></textarea>

        <%= button_to "Post", posts_url, {action: :new, class: 'btn pull-right btn-primary'} %>
      </form>
    </div>
  </div>
</div>

<% if @posts.empty? %>
  <p>no posts are on this shitty website yet apparently</p>
<% else %>
  <% @posts.each do |post| %>
    <div class="panel panel-default">
      <div class="panel-body">
        <h2><%= link_to post.title, blog_post_url(post.user, post) %></h2>
        <strong>by <%= link_to post.user.username, blog_url(post.user) %></strong>
                <span class="pull-right">
          <a>like</a>
          <a>reblog</a>
        </span>
        <hr>
        <%= markdown.render(post.body).html_safe %>

      </div>
    </div>
  <% end %>
<% end %>