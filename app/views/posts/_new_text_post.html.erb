<% collapse_class = collapsible ? "collapse" : "" %>

<div class="panel panel-default">
  <div style="position:relative;">
    <div class="profile-picture profile-picture-floater">
      <%= image_tag(current_user.guaranteed_profile_pic_url) %>
    </div>
  </div>
  
  <div class="panel-body">
    <h4>
      <a data-toggle="<%= collapse_class %>" data-target="#newTextPost">new text post
        <!-- <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> -->
      </a>
    </h4>
    <div class="<%= collapse_class %>" id="newTextPost">
      <%= react_component('NewTextPostForm') %>
    </div>
  </div>
</div>