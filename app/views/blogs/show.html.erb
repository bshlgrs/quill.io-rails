<% content_for :title do %>TumblrClone: <%= @user.username %><% end %>

<h1><%= link_to @user.username, blog_url(@user) %>'s blog!!!</h1>

<% if current_user && @user != current_user %>
  <% if current_user.is_following?(@user) %>
    <%= button_to "unfollow", unfollow_url(@user), class: "btn btn-default" %>
  <% else %>
    <%= button_to "follow", follow_url(@user), class: "btn btn-default" %>
  <% end %>
<% end %>

<% if @posts.empty? %>
  <p>nothing to see here...</p>
<% else %>
  <% @posts.each do |post| %>
    <%= render partial: "posts/polymorphic_show", locals: { post: post, display_author: false, big_title: false} %>
  <% end %>
<% end %>