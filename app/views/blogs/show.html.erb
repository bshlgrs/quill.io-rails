<% content_for :title do %>TumblrClone: <%= @user.username %><% end %>

<h1><%= link_to @user.username, blog_url(@user) %>'s blog!!!</h1>

<%= render partial: "relationships/follow_unfollow_buttons", locals: { user: @user } %>

<% if @posts.empty? %>
  <p>nothing to see here...</p>
<% else %>
  <% @posts.each do |post| %>
    <%= render partial: "posts/polymorphic_post_show", locals: { post: post, display_author: false, big_title: false} %>
  <% end %>
<% end %>